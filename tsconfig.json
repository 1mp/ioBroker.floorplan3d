{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "types": [
      "./src/@types/index"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./**/*"
  ]
}